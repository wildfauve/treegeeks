<!DOCTYPE html>
<html>
<head>
	<title><%= content_for?(:title) ? content_for(:title) : 'TreeGeek' %></title>
    <%= yield(:head) %>

	<%= stylesheet_link_tag    "application" %>
	<%= javascript_include_tag "application" %>
	<%= csrf_meta_tag %>
</head>
  <body>
	<div id="container">
		
		<div id="header">
			<h1><%= content_for?(:header_title) ? content_for(:header_title) : 'TreeGeek' %></h1>
			<div id="head_search">
				<%= form_tag search_path, :method => :get, :remote => true  do %>
				    <%= text_field_tag :q, params[:q]%>
				    <%= submit_tag "Search", :name => nil %>
				    <%= submit_tag "Clear", :name => "clear" %>
				<% end %>
		  	</div>
		</div>	
			<nav>
				<ul>
					<li><%= link_to "Trees", trees_path %></li>
					<li><%= link_to "Kinds", kinds_path %></li> 
					<li><%= link_to "All Pictures", pictures_path %></li>
				</ul>
			</nav>
			<div id="content">
		  		<%- flash.each do |name, msg| -%>
		    		<%= content_tag :div, msg, :id => "flash_#{name}" %>
		  		<%- end -%>      
		  		<%= yield %>
		  		<br/>
	    	</div>
	    	<aside>
				<h3>aside</h3>
				<p>
				text
				text
				text
				texttext
				texttext
				text
				</p>
			<aside>
	</div>
  </body>
</html>
